{
  "name": "study-buddy-pro",
  "version": "2.0.0",
  "description": "AI-Powered Study Companion - Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "study",
    "ai",
    "education",
    "learning",
    "gemini"
  ],
  "author": "Study Buddy Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "blob-stream": "^0.1.3",
    "dotenv": "^16.6.1",
    "electron-store": "^8.1.0",
    "pdfkit": "^0.14.0",
    "sql.js": "^1.10.3"
  },
  "devDependencies": {
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.studybuddy.app",
    "productName": "Study Buddy Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.map"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
