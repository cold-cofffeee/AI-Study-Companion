{
  "name": "study-buddy-pro",
  "version": "2.8.0",
  "description": "AI-Powered Study Companion with Complete Data Caching, Copy/PDF Export, HSC Bangladesh Support, Integrated Music Player & Comprehensive State Persistence",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "study",
    "ai",
    "education",
    "learning",
    "gemini",
    "pomodoro",
    "music-player",
    "youtube",
    "spotify",
    "productivity"
  ],
  "author": "Study Buddy Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "blob-stream": "^0.1.3",
    "electron-store": "^8.1.0",
    "pdfkit": "^0.14.0"
  },
  "devDependencies": {
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.studybuddy.app",
    "productName": "Study Buddy Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.map",
      "!dist/**/*",
      "!.git/**/*",
      "!*.md",
      "!LICENSE"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "StudyBuddyPro-${version}-portable.exe"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
